<section class="relative min-h-screen overflow-hidden py-20">
    <div class="absolute inset-0 w-full h-full">
        <img 
            src="/public/assets/images/blob-scene-haikei.svg"
            alt="Blob scene background"
            class="object-cover w-full h-full"
        />
    </div>

    <div class="absolute inset-0 w-full h-full opacity-10">
        <img 
            src="/public/assets/images/blob-scatter-haikei.svg"
            alt="Blob scatter overlay"
            class="object-cover w-full h-full"
        />
    </div>

    <main class="relative z-10 min-h-screen flex items-center mix-blend-difference">
        <div class="max-w-7xl mx-auto px-4 py-20">
            <!-- Section Header -->
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-6  mix-blend-difference">
                    Why Choose DST?
                </h2>
                <p class="text-xl text-gray-200  mix-blend-difference">
                    Powerful features designed to make support ticket management efficient and effective
                </p>
            </div>

            <!-- Feature Cards Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for feature in features %}
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-300 hover:scale-105 border border-white/20">
                    <div class="flex items-center mb-6">
                        <div class="p-3 rounded-xl bg-white/20">
                            <i data-lucide="{{ feature.icon }}" class="h-8 w-8 text-white"></i>
                        </div>
                    </div>

                    <h3 class="text-2xl font-bold text-white mb-4 ">
                        {{ feature.title }}
                    </h3>

                    <p class="text-gray-200 leading-relaxed ">
                        {{ feature.description }}
                    </p>
                </div>
                {% endfor %}
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-16">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 max-w-2xl mx-auto">
                    <h3 class="text-2xl font-bold text-white mb-4 ">
                        Ready to Streamline Your Support?
                    </h3>
                    <p class="text-gray-200 mb-6 ">
                        Join thousands of support teams who trust DST for their ticket management needs.
                    </p>
                    <a href="/auth?mode=register" class="inline-block bg-white text-[#232323] px-8 py-4 rounded-lg  font-semibold hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl">
                        Start Managing Tickets
                    </a>
                </div>
            </div>
        </div>
    </main>
</section>
